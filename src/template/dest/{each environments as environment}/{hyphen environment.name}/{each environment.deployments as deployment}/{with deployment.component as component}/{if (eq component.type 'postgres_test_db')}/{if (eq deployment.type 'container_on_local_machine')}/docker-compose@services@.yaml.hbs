  #
  # {{component.name}}
  #
  {{component.instance_name}}:
    image: {{component.container_image}}
    container_name: {{component.instance_name}}
    ports:
    - '{{printf "%1$s:%1$s" component.port}}'
    expose:
    - '{{component.port}}'
    environment:
    - 'POSTGRES_USER={{component.username}}'
    - 'POSTGRES_PASSWORD={{component.password}}'
    - 'POSTGRES_DB={{component.database_name}}'
    networks:
    - backend